@import './normalize.css'
@import './reset'

$black = #212121
$white = #FAFAFA

@import './mixins'
@import './header'
@import './habilidades'
@import './quien-soy'
@import './aptitudes'
@import './contacto'


body
	font-size 16px

.container
	&__fix
		margin-top 180px
.fondo-menu
	display none
	position absolute
	z-index 2
	height 100vh
	width 100vw
	transition all 0.15s ease-in
	&__show
		display block
		transition all 0.15s ease-in
		background-color #00000088
.seccion
	padding 1rem
	mix-flex-column()
	&--titulo
		font-size 1.3rem
		padding-bottom 1rem
		&__white
			color $white
	&--subtitulo
		font-size 1.1rem
		padding-bottom 0.8rem
		padding-top 0.8rem
		color #333333